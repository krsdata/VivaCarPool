<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="#ff7654"
    android:foreground="?attr/selectableItemBackground">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:orientation="horizontal"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <RelativeLayout
                        android:id="@+id/from_loc_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_medium">

                        <ImageView
                            android:id="@+id/lis_from_location_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/to" />

                        <TextView
                            android:id="@+id/ride_history_from_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melbourne"
                            android:textColor="@color/material_grey_800"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/lis_from_location_img"
                            android:layout_toEndOf="@+id/lis_from_location_img" />


                        <ImageView
                            android:id="@+id/lis_to_location_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/from"
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/lis_from_location_img"/>

                        <TextView
                            android:id="@+id/ride_history_to_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sydney"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/material_grey_800"
                            android:layout_below="@id/lis_from_location_img"
                            android:layout_toRightOf="@+id/lis_to_location_img"
                            android:layout_toEndOf="@+id/lis_to_location_img" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <RelativeLayout
                        android:id="@+id/from_loc_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_medium">

                        <TextView
                            android:id="@+id/ride_history_from_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25/02/2017 - 15:00"
                            android:textColor="@color/material_grey_800"
                            />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ride ID"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/history_ride_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="20/09/2017"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Booked On"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/history_booked_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20/09/2017"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Seats Booked"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/history_booked_seats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/history_ride_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textColor="#00ff00"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/history_ride_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTION"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/history_ride_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHAT"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            </LinearLayout>
</android.support.v7.widget.CardView>